@using ClientPhoneBookApp.ViewModels


@model List<ContactViewModel>
<!DOCTYPE html>
<html>
    <body>

    <form method="get" id="myForm">
        <div>
            <div class="btn-row">
                @for (char letter = 'A'; letter <= 'Z'; letter++)
                {
                    <button type="submit" class="btn btn-info alphabet-btn" name="letter" value="@letter">@letter</button>
                }
                <button type="submit" class="btn btn-info show-all-btn" name="All" value="contact">Show all contacts</button>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model!=null)
                    {
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>@contact.FirstName</td>
                            <td>@contact.LastName</td>
                            <td>
                                <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId">Edit</a>
                                <a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">Details</a>
                                <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId">Delete</a>
                            </td>
                        </tr>
                    }
                    }
                    else
                    {
                    <td>No record found.</td>
                    }
                </tbody>
            </table>

        </div>
    </form>

</body>
</html>
